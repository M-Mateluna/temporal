    <button class="btn" id="btnProbar">Enviar fecha de prueba</button>
  </div>

  <script>
    document.getElementById('btnProbar').addEventListener('click', () => {
      try {
        if (window.parent) {
          // Enviamos un valor de ejemplo al padre para comprobar el flujo
          window.parent.postMessage({ type: 'set_fecha', value: '28-02-2024' }, '*');
        }
      } catch (e) {}
      try {
        if (window.parent && typeof window.parent.OcultarVentana === 'function') {
          window.parent.OcultarVentana();
        }
      } catch (e) {}
    });
  </script>
