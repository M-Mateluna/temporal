// Asegurar fecha/hora correcta en formato datetime-local (YYYY-MM-DDTHH:MM)
try {
  let f = self.elementos.fechahora;
  if (f && !f.value) {
    let d = new Date();
    d.setMinutes(d.getMinutes() - d.getTimezoneOffset());
    // ✅ Formato válido para <input type="datetime-local">
    f.value = d.toISOString().slice(0,16);
  }
} catch(e){}
