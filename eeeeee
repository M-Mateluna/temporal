<?php
while (!file_exists($POSICION . "conexion.php")) {
  $POSICION .= "../";
}
require_once($POSICION . "formHeader.php");
?>
<!DOCTYPE html>
<html>

<head>
  <meta http-equiv="Content-Type" content="text/html; charset=ISO-8859-1">
  <title>Ejercicio Calendario (Lightbox)</title>

  <link type="text/css" rel="stylesheet" href="<?= $POSICION ?>css/nuevoestilo.css?v=1.8">
  <style>
    .contenedor {
      text-align: center;
      padding: 20px;
      background: #f1f1f1;
      border-radius: 10px;
      width: 420px;
      margin: 60px auto;
    }

    label {
      display: block;
      margin-bottom: 6px;
      text-align: left;
    }

    input[type="text"] {
      width: 100%;
      height: 26px;
      border-radius: 5px;
      border: 1px solid #999;
      padding: 0 8px;
    }

    button {
      height: 30px;
      padding: 0 14px;
      border-radius: 5px;
      border: 1px solid #777;
      background: #e0e0e0;
      cursor: pointer;
      font-weight: bold;
      margin-top: 10px;
    }

    button:hover {
      background: #d0d0d0;
    }
  </style>
</head>

<body>

  <div class="FORMULARIONECSS contenedor">
    <fieldset>
      <legend class="legends">Selección de Fecha</legend>
      <label for="fecha">Fecha de término</label>
      <input type="text" id="fecha" readonly placeholder="Seleccione una fecha">
      <br>
      <button type="button" id="btnAbrir">Abrir Calendario</button>
    </fieldset>
  </div>

  <!-- Importaciones obligatorias del componente -->
  <script type="text/javascript" src="<?= $POSICION ?>componente/mascara/lightbox-iframe.js?v=<?= rand(); ?>"></script>
  <script type="text/javascript" src="<?= $POSICION ?>componente/mascara/iu.js?v=<?= rand(); ?>"></script>

  <script type="text/javascript">
    // Crea el markup del lightbox (requerido por la wiki)
    addLightboxMarkup();

    // Se crea el objeto Ajuste según el estándar
    var Ajuste = {
      ventana: typeof IU,
      initialize: function () { this.ventana = new IU(); }
    };
    Ajuste.initialize();

    // Abrir calendario dentro del lightbox
    function abrirCalendario() {
      Ajuste.ventana.ShowInfoWidget("lb_fecha.php", 300, 450, 'OcultarVentana');
    }

    // Cerrar el lightbox (usado desde el hijo)
    function OcultarVentana() {
      Ajuste.ventana.HideInfo();
    }

    // Abrir con el botón
    document.getElementById("btnAbrir").onclick = abrirCalendario;

    // Recibir mensaje desde el lightbox (fecha seleccionada)
    window.addEventListener('message', function (event) {
      if (event.data && event.data.type === 'set_fecha') {
        document.getElementById('fecha').value = event.data.value;
        OcultarVentana();
      }
    }, false);
  </script>
</body>
</html>
