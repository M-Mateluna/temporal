<?php
// Ubicar raíz del proyecto
while (!file_exists($POSICION."conexion.php")) { $POSICION .= "../"; }
require_once($POSICION."formHeader.php"); // ISO-8859-1 + dependencias globales
?>
<!DOCTYPE html>
<html>
<head>
  <meta http-equiv="Content-Type" content="text/html; charset=ISO-8859-1">
  <title>Lightbox – Bancos</title>
</head>
<body>

  <div style="padding:24px;text-align:center">
    <button onclick="abrirLB()">Abrir listado de bancos</button>
  </div>

  <!-- Componentes Lightbox del proyecto -->
  <script type="text/javascript" src="<?=$POSICION;?>componente/mascara/lightbox-iframe.js?v=<?=rand();?>"></script>
  <script type="text/javascript" src="<?=$POSICION;?>componente/mascara/iu.js?v=<?=rand();?>"></script>

  <script type="text/javascript">
    // crear overlay/lightbox (componente)
    addLightboxMarkup();

    // handler estándar
    let Ajuste = { ventana: typeof IU, initialize(){ this.ventana = new IU(); } };
    Ajuste.initialize();

    function abrirLB(){
      // (iframe, alto, ancho, fnCerrar)
      Ajuste.ventana.ShowInfoWidget("lb_bancos.php", 520, 820, "cerrarLBPrincipal");
    }
    function cerrarLBPrincipal(){ Ajuste.ventana.HideInfo(); }
  </script>
</body>
</html>
