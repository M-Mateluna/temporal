<?php
// Resolver $POSICION de forma segura
$POSICION = isset($POSICION) ? $POSICION : '';
for ($i=0; $i<12 && !file_exists($POSICION.'conexion.php'); $i++) { $POSICION .= '../'; }
require_once($POSICION.'formHeader.php');

// Hoy ± 1 mes (rango permitido)
$hoy = new DateTime('today');
$min = (clone $hoy)->modify('-1 month')->format('Y-m-d');
$max = (clone $hoy)->modify('+1 month')->format('Y-m-d');
$hoyStr = $hoy->format('Y-m-d');
?>
<!DOCTYPE html>
<html>
<head>
  <meta http-equiv="Content-Type" content="text/html; charset=ISO-8859-1">
  <title>Termino Contrato</title>

  <link rel="stylesheet" href="<?=$POSICION?>css/nuevoestilo.css?v=1.8">
  <style>
    .wrap{ min-width:560px; background:#f1f1f1; padding:24px; }
    .row{ display:flex; align-items:center; gap:10px; margin:14px 0; }
    .lbl{ min-width:220px; }
    .date-wrapper{ position:relative; width:220px; }
    .date-wrapper input[type="date"]{
      width:100%; height:26px; border:1px solid #999; border-radius:5px;
      padding:0 28px 0 8px; background:#fff;
    }
    .btn-clear{
      position:absolute; right:5px; top:50%; transform:translateY(-50%);
      width:20px; height:20px; line-height:18px; text-align:center;
      border:1px solid #aaa; border-radius:3px; background:#fff; cursor:pointer; font-weight:bold;
    }
    .btn{
      height:32px; padding:0 16px; border-radius:6px; border:1px solid #6c757d;
      background:#e9ecef; cursor:pointer; display:inline-flex; align-items:center; gap:8px;
    }
    .btn img{ width:18px; height:18px; }
    .center{ text-align:center; }
  </style>
</head>
<body>
  <div class="FORMULARIONECSS wrap">
    <div class="row">
      <div class="lbl"><strong>Ingrese Fecha de Término:</strong></div>

      <!-- Calendario no editable por teclado + botón borrar -->
      <div class="date-wrapper">
        <input
          type="date"
          id="fechaTermino"
          value="<?=$hoyStr?>"
          min="<?=$min?>" max="<?=$max?>"
          onkeydown="return false" onkeypress="return false"
          title="Seleccione una fecha"
        >
        <button type="button" class="btn-clear" id="btnClear" title="Borrar">×</button>
      </div>
    </div>

    <div class="row center">
      <button type="button" class="btn" id="btnGuardar" title="Guardar">
        <img src="<?=$POSICION?>img/<?=$CSS_STYLE?>/ico/32/guardar.png" alt="">
        Guardar
      </button>
    </div>
  </div>

  <script>
    const inputFecha = document.getElementById('fechaTermino');
    const btnClear   = document.getElementById('btnClear');
    const btnGuardar = document.getElementById('btnGuardar');

    // Borrar fecha
    btnClear.addEventListener('click', () => { inputFecha.value = ''; });

    // (opcional) enviar al padre y cerrar — si luego quieres validar, aquí lo haremos
    btnGuardar.addEventListener('click', () => {
      try {
        const val = inputFecha.value; // 'YYYY-MM-DD'
        if (window.parent) {
          // Si prefieres devolver formateado 'DD-MM-YYYY', cambia aquí
          window.parent.postMessage({ type: 'set_fecha', value: val }, '*');
        }
      } catch (e) {}
      try {
        if (window.parent && typeof window.parent.OcultarVentana === 'function') {
          window.parent.OcultarVentana();
        }
      } catch (e) {}
    });
  </script>
</body>
</html>
