  background-color: #ff4d4d;        /* Rojo principal */
  border: none;                     /* Sin borde */
  color: white;                     /* Texto blanco */
  padding: 6px 14px;                /* Tamaño cómodo */
  border-radius: 6px;               /* Bordes suaves */
  cursor: pointer;                  /* Indicador de clic */
  font-size: 14px;
  font-weight: bold;
  transition: background-color 0.2s ease, transform 0.1s ease;
}

/* Efecto hover */
.btn-eliminar:hover {
  background-color: #e43f3f;        /* Rojo más oscuro */
  transform: scale(1.03);           /* Pequeño aumento */
}

/* Efecto al hacer clic */
.btn-eliminar:active {
  background-color: #c93030;        /* Rojo más profundo */
  transform: scale(0.98);
}

