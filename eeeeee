<script type="text/javascript">
/* Pre-cargar Fecha/Hora con el momento actual en formato compatible */
(function () {
  var fh = document.getElementById('fechahora');
  if (fh && !fh.value) {
    var d = new Date();
    d.setMinutes(d.getMinutes() - d.getTimezoneOffset());
    fh.value = d.toISOString().slice(0,16); // YYYY-MM-DDTHH:MM
  }
})();
</script>

