<?php
$cmd = $_REQUEST['cmd'] ?? '';

switch ($cmd) {
  case 'listar': {
    $query = "
      SELECT
        idbanco,
        COALESCE(nombre,'')  AS nombre,
        COALESCE(urlweb,'')  AS urlweb
      FROM public.banco
      ORDER BY nombre ASC
    ";
  } break;

  default:
    die('Comando no valido');
}
