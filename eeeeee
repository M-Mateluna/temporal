// Crear estructura base de Lightbox al cargar la página
addLightboxMarkup();

// Namespace principal (reutilizable)
var Ajuste = {
  ventana: typeof IU,
  initialize: function () { this.ventana = new IU(); }
};
Ajuste.initialize();

// Submódulo específico del ejercicio
Ajuste.TerminoContrato = {
  open: function(){
    // Abre Lightbox con callback para cierre
    Ajuste.ventana.ShowInfoWidget('tc_ejercicio.php', 360, 620, 'OcultarVentana');
  }
};

// Callback estándar para cerrar el Lightbox
function OcultarVentana(){
  Ajuste.ventana.HideInfo();
}
